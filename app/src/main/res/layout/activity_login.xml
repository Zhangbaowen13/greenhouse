<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.pengpeng.LoginActivity">
<include layout="@layout/login_title"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_marginTop="30sp"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_loginbg"
        android:layout_marginTop="10sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:src="@mipmap/username"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#00A5A0"
                android:textSize="8pt"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/account_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="#00A5A0"
                android:textSize="8pt"
                android:maxLines="1"
                android:maxLength="13"
                android:maxWidth="20pt"
                android:layout_marginLeft="3pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:src="@mipmap/password"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密    码"
                android:textColor="#00A5A0"
                android:textSize="8pt"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:textColor="#00A5A0"
                android:textSize="8pt"
                android:maxLines="1"
                android:maxWidth="20pt"
                android:layout_marginLeft="3pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="9dp">
            <CheckBox
                android:id="@+id/remember_pass"
                android:layout_width="wrap_content"
                android:layout_height="11pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7pt"
                android:text="记住密码"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_bt"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:background="@mipmap/bg_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="登     录"
            android:textColor="#fff"
            android:textSize="10pt"/>
    </LinearLayout>
</LinearLayout>
