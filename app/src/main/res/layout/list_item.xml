<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A5A0"
    android:id="@+id/greenhouse_item_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:background="@mipmap/number"
            android:layout_marginLeft="3dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00A5A0"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/picture_img"
                android:layout_width="65dp"
                android:layout_height="58dp"
                android:scaleType="fitXY"
                android:padding="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00A5A0"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/huanwen"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="环温："
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/huanwen_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:textColor="#fff"
                            android:textSize="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00A5A0"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/eryanghuatan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CO2："
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/eryanghuatan_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ppm"
                            android:textColor="#fff"
                            android:textSize="10dp"/>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_weight="1"
                    android:paddingTop="6dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00A5A0"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/huanshi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="环湿："
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/huanshi_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="％"
                            android:textColor="#fff"
                            android:textSize="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#00A5A0"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:paddingRight="4dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="2dp"
                            android:src="@mipmap/guangzhao"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="光照："
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:id="@+id/guangzhao_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KLux"
                            android:textColor="#fff"
                            android:textSize="10dp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>